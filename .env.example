# Database
DATABASE_URL="postgresql://username:password@localhost:5432/archer_health_db"

# SMTP Configuration for Contact Form
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
# SMTP_FROM is optional - if not set, emails will be sent from SMTP_USER
SMTP_FROM="noreply@yourdomain.com"

# Contact Email (where contact form messages are sent)
CONTACT_EMAIL="your-contact-email@example.com"

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Next.js
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
AQUA_BASE_URL="https://aqua.adarcher.app"

# Caching (Redis)
REDIS="redis://user:password@host:6379/0"
# Optional key namespace (defaults to "archer-health")
REDIS_KEY_PREFIX="archer_health_user"
# Optional TTL override in seconds (defaults to 300)
CACHE_TTL_SECONDS="300"
